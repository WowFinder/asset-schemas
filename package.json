{
    "name": "@wowfinder/asset-schemas",
    "version": "0.0.14",
    "description": "Asset schemas and validation for the WowFinder project",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/WowFinder/asset-schemas.git",
    "author": "Edurne Pascual <herenvardo@gmail.com>",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "lint": "eslint . --ext js,ts",
        "lint:fix": "eslint . --ext js,ts --fix",
        "format": "prettier --write \"{assets,schema}/**/*.{js,ts,json,json5}\"",
        "format:check": "prettier --check \"{assets,schema}/**/*.{js,ts,json,json5}\"",
        "test": "jest --verbose",
        "test:coverage": "jest --verbose --coverage",
        "skott:web": "skott -nit --displayMode=webapp --trackThirdPartyDependencies --trackBuiltinDependencies src/",
        "skott:circular": "skott -nit --showCircularDependencies --displayMode=raw",
        "checks:quick": "npm-run-all -sc lint",
        "checks:standard": "npm-run-all -sc lint build test",
        "checks:full": "npm-run-all -sc lint:fix format build test:coverage",
        "checks:pedantic": "npm-run-all -sc lint:fix format build test:coverage skott:circular",
        "build:pre": "rimraf dist",
        "build:tsc": "tsc",
        "build:schema": "bash build-schemas.sh",
        "build:setup": "node dist/.setup.js",
        "build:pack": "cd dist && yarn pack && mv package.tgz ../package.tgz",
        "build": "npm-run-all -s build:pre build:tsc build:schema build:setup build:pack",
        "prepublishOnly": "yarn checks:pedantic && yarn version apply && yarn build"
    },
    "dependencies": {
        "@wowfinder/ts-enums": "^0.0.14",
        "ajv": "^8.17.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@tsconfig/node20": "^20.1.4",
        "@tsd/typescript": "^5.8.2",
        "@types/ajv": "^1.0.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.17.22",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.16.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-promise": "^6.6.0",
        "jest": "^29.7.0",
        "jest-tsd": "^0.2.2",
        "json5": "^2.2.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.2",
        "rimraf": "^6.0.1",
        "skott": "^0.35.4",
        "ts-jest": "^29.2.6",
        "tsd": "^0.31.2",
        "typescript": "^5.8.2",
        "typescript-json-schema": "^0.65.1"
    },
    "packageManager": "yarn@4.1.1"
}

{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "declaration": true,
        "module": "commonjs",
        "lib": ["es2023", "esnext"],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./schema",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["schema/**/*"]
}
